@model GrupoAox.Estagio.Domain.Entidades.Transferencia

@{
    ViewBag.Title = "Imprimir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form id="form-report" action="" method="GET" target="_blank">
    <div class="card mb-2 mt-4">
        <div class="card-header">
            <span class="h2">Imprimir Ordem de Expedição</span>
        </div>
        <div class="card-body">
            <div class="form-group">
                <div class="col-md-2">
                    <label class="col-form-label">Num. Documento</label>
                </div>
                <div class="col-md-12">
                    <div class="input-group mb-3">
                        @if (ViewBag.NumDocumento != null)
                        {
                            <input type="number" id="ordemExpedicao" name="ordemExpedicao" class="form-control" value="@ViewBag.NumDocumento" readonly="readonly" />
                        }
                        else
                        {
                            <input type="number" id="ordemExpedicao" name="ordemExpedicao" class="form-control" />
                        }

                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    <label class="col-form-label">Exportar Para</label>
                </div>
                <div class="col-md-12">
                    <select class="form-control" id="exportarPara">
                        <option value="pdf">PDF</option>
                        <option value="excel">Excel</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="row">
    <div class="col-md-12">
        <button type="button" class="btn btn-primary mt-2 mb-3" id="btnGerarRelatorio">Gerar relatório</button>
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-warning mt-2 mb-3" })
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/ImpressaoOrdemExpedicao")
}


