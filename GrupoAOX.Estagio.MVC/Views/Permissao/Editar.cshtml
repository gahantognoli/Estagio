@model GrupoAOX.Estagio.Application.ViewModel.PermissaoViewModel

@{
    ViewBag.Title = "Editar";
}

<div class="card mb-2 mt-4">
    <div class="card-header">
        <p class="h2">Editar Permissão</p>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Editar", "Permissao", FormMethod.Post, new { id = "form-edit" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.PermissaoId, htmlAttributes: new { @class = "col-form-label" })
                </div>
                <div class="col-md-2">
                    @Html.EditorFor(model => model.PermissaoId, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.PermissaoId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "col-form-label" })
                </div>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.Sigla, htmlAttributes: new { @class = "col-form-label" })
                </div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Sigla, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.Sigla, "", new { @class = "text-danger" })
                </div>
            </div>
        }
    </div>
</div>

<p>
    @Html.ActionLink("Voltar para Lista", "Index", null, new { @class = "btn btn-secondary" })
    <input type="submit" value="Editar" class="btn btn-warning" onclick="$('#form-edit').submit();" />
</p>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}