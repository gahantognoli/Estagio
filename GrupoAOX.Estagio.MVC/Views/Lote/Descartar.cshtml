@model GrupoAox.Estagio.Domain.Entidades.int_exp_Etiqueta_Producao

@{
    ViewBag.Title = "Descartar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card mb-2 mt-4">
    <div class="card-header">
        <span class="h2">Descartar Etiqueta</span>
    </div>

    <div class="card-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-2">
                <label class="col-form-label">Etiqueta</label>
            </div>
            <div class="col-md-12">
                <div class="input-group mb-3">
                    <input type="text" id="Etiqueta" name="Etiqueta" class="form-control" placeholder="Informe a Etiqueta" />
                    <div class="input-group-append">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                    </div>
                </div>
            </div>
        </div>

        <hr />

        <div class="col-md-12">
            <table class="table table-striped table-sm">
                <thead class="thead-dark">
                    <tr>
                        <th>Id</th>
                        <th>Etiqueta</th>
                        <th>OP</th>
                        <th>Fitec</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="lotes"></tbody>
            </table>
        </div>
    </div>
    <div class="card-footer">
        <button type="button" id="btnDescartar" class="btn btn-lg btn-primary btn-block">Descartar</button>
    </div>
</div>

<div class="modal" id="modal-descarte" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Descartando Etiqueta</h5>
            </div>
            <div class="modal-body d-flex justify-content-center" style="height: 230px">
                <img src="~/images/ajax-loader-200px.gif" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/DescartarEtiqueta")
}
